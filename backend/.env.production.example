# Archivo de variables de entorno para PRODUCCIÓN
# ⚠️ NO COMMITEAR ESTE ARCHIVO - Agregar a .gitignore

# ====================
# DJANGO SETTINGS
# ====================
SECRET_KEY=cambiar_esto_por_una_clave_super_segura_de_50_caracteres
DEBUG=False
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com,api.tu-dominio.com,IP_DE_TU_VM

# ====================
# BASE DE DATOS
# ====================
# Para PostgreSQL en la misma VM
DATABASE_URL=postgresql://faunakids_user:tu_password_segura@localhost:5432/fauna_kids_db

# O para Cloud SQL de Google (recomendado para producción)
# DATABASE_URL=postgresql://usuario:password@/db_name?host=/cloudsql/proyecto:region:instancia

# ====================
# APIS EXTERNAS
# ====================
# Google Gemini AI
GEMINI_API_KEY=tu_gemini_api_key_aqui
GEMINI_TEXT_MODEL=gemini-2.0-flash-exp
GEMINI_IMAGE_MODEL=gemini-2.0-flash-exp

# Google OAuth 2.0
GOOGLE_CLIENT_ID=tu_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_client_secret_aqui

# Google Cloud (para TTS y otras APIs)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GCP_PROJECT_ID=tu-proyecto-gcp

# ====================
# CORS
# ====================
CORS_ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com
CORS_ALLOW_CREDENTIALS=True

# ====================
# SEGURIDAD
# ====================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ====================
# EMAIL (Opcional)
# ====================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu_app_password_de_google

# ====================
# STORAGE (Opcional - Google Cloud Storage)
# ====================
# USE_GCS=True
# GCS_BUCKET_NAME=fauna-kids-media
# GCS_PROJECT_ID=tu-proyecto-gcp

# ====================
# LOGGING
# ====================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

